{
  "name": "dns-notes",
  "description": "Notes for your DNS records in case you forget what each was for once you have alot of them",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": ["contextMenus", "storage"],
  "omnibox": { "keyword": "dns" },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Notes for your DNS records",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "options_page": "src/options.html",
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}
